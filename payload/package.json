{
  "name": "bh-payload",
  "version": "1.0.0",
  "description": "Bounce House Rental SaaS - Payload CMS Backend",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "seed": "cross-env NODE_OPTIONS=--no-deprecation tsx src/seed.ts",
    "seed:qa": "cross-env NODE_OPTIONS=--no-deprecation tsx src/seed-qa.ts",
    "seed:waivers": "cross-env NODE_OPTIONS=--no-deprecation tsx src/seed-default-waivers.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@payloadcms/db-postgres": "3.64.0",
    "@payloadcms/next": "3.64.0",
    "@payloadcms/richtext-lexical": "3.64.0",
    "@payloadcms/ui": "3.64.0",
    "axios": "^1.7.0",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.1.3",
    "dotenv": "16.4.7",
    "express-rate-limit": "^8.2.1",
    "graphql": "^16.8.1",
    "iconv-lite": "^0.6.3",
    "next": "15.5.9",
    "payload": "3.64.0",
    "pdfkit": "^0.15.0",
    "qrcode": "^1.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sharp": "0.34.2",
    "stripe": "^20.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@types/pdfkit": "^0.13.5",
    "@types/qrcode": "^1.5.5",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.16.0",
    "eslint-config-next": "15.4.7",
    "prettier": "^3.4.2",
    "tsx": "^4.19.3",
    "typescript": "5.7.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild"
    ],
    "ignoredBuiltDependencies": [
      "unrs-resolver"
    ]
  }
}
