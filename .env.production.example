# BouncePro Production Environment Variables
# Copy this file to .env.production and fill in your values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_NAME=bouncepro
DATABASE_USER=bouncepro_user
DATABASE_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD_USE_openssl_rand_base64_32

# ============================================================================
# PAYLOAD CMS CONFIGURATION
# ============================================================================
PAYLOAD_SECRET=CHANGE_ME_TO_STRONG_SECRET_USE_openssl_rand_base64_32
NEXT_PUBLIC_SERVER_URL=https://api.yourdomain.com

# ============================================================================
# NUXT CONFIGURATION
# ============================================================================
NUXT_PUBLIC_PAYLOAD_URL=https://yourdomain.com

# ============================================================================
# STRIPE PAYMENT PROCESSING
# ============================================================================
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_LIVE_SECRET_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXXXXXXXXXX

# Stripe Connect (for multi-tenant payments)
STRIPE_CONNECT_CLIENT_ID=ca_XXXXXXXXXXXXXXXXXXXXXXXX

# ============================================================================
# BUNNY CDN (MEDIA STORAGE)
# ============================================================================
# Sign up at: https://bunny.net
BUNNY_STORAGE_API_KEY=XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX
BUNNY_STORAGE_ZONE=bouncepro
BUNNY_CDN_HOSTNAME=cdn.yourdomain.com

# ============================================================================
# EMAIL (BREVO/SENDINBLUE)
# ============================================================================
# Sign up at: https://www.brevo.com
BREVO_API_KEY=xkeysib-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
BREVO_SENDER_EMAIL=noreply@yourdomain.com
BREVO_SENDER_NAME=BouncePro

# ============================================================================
# MONITORING & ERROR TRACKING
# ============================================================================
# Sentry - Sign up at: https://sentry.io
SENTRY_DSN=https://XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX@oXXXXXX.ingest.sentry.io/XXXXXXX

# ============================================================================
# SECURITY
# ============================================================================
# Allowed admin IP addresses (comma-separated, leave empty to allow all)
ALLOWED_ADMIN_IPS=

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
# AWS S3 for backups (optional)
AWS_S3_BUCKET=bouncepro-backups
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
AWS_DEFAULT_REGION=us-east-1

# Backup retention (days)
RETENTION_DAYS=30

# ============================================================================
# SSL/TLS CONFIGURATION (LET'S ENCRYPT)
# ============================================================================
SSL_EMAIL=admin@yourdomain.com
DOMAIN=yourdomain.com

# ============================================================================
# RATE LIMITING
# ============================================================================
# Override default rate limits if needed
# RATE_LIMIT_WINDOW_MS=60000
# RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================
SESSION_SECRET=CHANGE_ME_TO_STRONG_SECRET_USE_openssl_rand_base64_32
SESSION_MAX_AGE=604800000

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Allowed origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_ANALYTICS=true
ENABLE_MAINTENANCE_MODE=false

# ============================================================================
# THIRD-PARTY INTEGRATIONS
# ============================================================================
# Google Maps API (for address validation and delivery routing)
GOOGLE_MAPS_API_KEY=

# Twilio (for SMS notifications - optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================
# Node.js memory limit (MB)
NODE_OPTIONS=--max-old-space-size=2048

# Database connection pool
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
